import ac
import acsys

def acMain(ac_version):
    app_window = ac.newApp("Your App Name")
    ac.setSize(app_window, 200, 100)
    ac.drawBorder(app_window, 0)
    ac.setBackgroundOpacity(app_window, 0)
    
    label = ac.addLabel(app_window, "Hello, Assetto Corsa!")
    ac.setPosition(label, 10, 30)
    
    # Update your app's content here
    ac.setText(label, "Speed: {} km/h".format(int(ac.getCarState(0).speedKmh)))

    return "Your App Name"
